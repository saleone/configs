// Place your settings in this file to overwrite the default settings
{
// Editor
    "editor.fontFamily": "'Fira Code Medium', 'Fira Mono Medium', 'Source Code Pro', 'Ubuntu Mono'",
    "editor.fontSize": 13,
    "editor.lineHeight": 35,
    "editor.rulers": [80, 100],
    "editor.quickSuggestionsDelay": 20,
    "editor.acceptSuggestionOnEnter": false,
    "editor.suggestFontSize": 12,
    "editor.suggestLineHeight": 25,
    "editor.cursorBlinking": "phase",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,
    "diffEditor.ignoreTrimWhitespace": false,

// Workbench
    "workbench.activityBar.visible": true,
    "workbench.editor.showIcons": true,

// Window
    "window.openFilesInNewWindow": false,
    "window.reopenFolders": "all",

// Files
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",

// File explorer
    "explorer.openEditors.visible": 5,

// Search
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },

// CSS
    "css.lint.duplicateProperties": "warning",
    "css.lint.importStatement": "warning",
    "css.lint.universalSelector": "warning",
    "css.lint.zeroUnits": "warning",
    "css.lint.important": "warning",
    "css.lint.float": "warning",

// Extensions
    "extensions.autoUpdate": true,

// Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

// Git Project Manager
    "gitProjectManager.baseProjectsFolders": [
        "~/Dev/"
    ],
    "gitProjectManager.ignoredFolders": [
        "node_modules"
    ],
    "gitProjectManager.storeRepositoriesBetweenSessions": true,

// Python configuration
    "python.pythonPath": "python3",
    "python.linting.enabled": false,
    "python.unitTest.pyTestEnabled": true,

// amVim configuration
    "amVim.bindCtrlCommands": false,

// C#
    "csharp.suppressDotnetInstallWarning": false,

// Auto close tag
    "auto-close-tag.SublimeText3Mode": true,

// PHP
    "php.validate.enable": true,
    "php.validate.run": "onType"
}