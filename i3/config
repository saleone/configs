###
# Variables

# Modifier key will be ALT.
set $mod Mod1

# Color variables (affects the window decorations).
set $focused #EFECCA
set $unfocused #A7A37E
set $text #002F2F
set $ltext #E6E2AF
set $untext $text
set $bg #002F2F
set $urgent #FF7F66
set $border_c #000000
set $indicator $bg

# /End of Variables
###

###
# Window organization and movement

# Mouse+$mod to drag floating windows to their wanted position.
floating_modifier $mod

# Kill focused window.
bindsym $mod+Shift+q kill

# Change focus on windows.
bindsym $mod+h focus left        
bindsym $mod+j focus down       
bindsym $mod+k focus up        
bindsym $mod+l focus right    
bindsym $mod+Left focus left 
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the window with focus.
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Change the way windows are split.
bindsym $mod+b split h # split horizontally
bindsym $mod+v split v # split vertically

# Toggle program in fullscreen mode.
bindsym $mod+f fullscreen toggle

# Change the container layout (stacked, tabbed, toggle split).
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle window between tiling and floating mode.
bindsym $mod+Shift+space floating toggle

# Change focus between tiling and floating windows.
bindsym $mod+space focus mode_toggle

# Resizing windows (Right mouse button + $mod can do the same).
mode "resize" {
        bindsym h resize shrink width 3 px or 3 ppt   
        bindsym j resize grow height 3 px or 3 ppt
        bindsym k resize shrink height 3 px or 3 ppt
        bindsym l resize grow width 3 px or 3 ppt
        bindsym Left resize shrink width 3 px or 3 ppt
        bindsym Down resize grow height 3 px or 3 ppt
        bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px or 3 ppt

        # Return to standard mode with Escape.
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# /End of Window organization and movement
###

###
# Program Shortcuts

# Start a terminal.
bindsym $mod+Return exec i3-sensible-terminal

# Start program launcher (currently dmenu).
bindsym $mod+d exec dmenu_run

# Reload i3wm config file.
bindsym $mod+Shift+c reload

# Restart i3wm. 
bindsym $mod+Shift+r restart

# Exit i3wm. Log out of the session.
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to log out?' -b 'YES' 'i3-msg exit'"

# Pulse audio volume control.
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% 

# /End of Program Shortcuts

###

###
# Window decorations

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu Bold 10

# Define window decoration colors (check the variables for color hex codes).
# class                 border     backgr.     text    indicator  
client.focused          $focused   $focused    $text   $indicator
client.focused_inactive $unfocused $unfocused  $untext $indicator
client.unfocused        $unfocused $unfocused  $untext $indicator
client.urgent           $urgent    $urgent     $text   $indicator

# Remove borders on screen edges.
hide_edge_borders both

# Status bar settings.
bar {
        status_command ~/.status
        position top

# Status bar colors.
        colors {
            background  $bg
            separator   $bg
            # class                 border     backgr.     text    
            focused_workspace       $bg        $focused    $text   
            inactive_workspace      $bg        $bg         $focused 
            urgent_workspace        $bg        $urgent     $text
        }
        tray_output primary
}

# /End of Window decorations
###

###
# Workspace organization

# Switching to workspaces.
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# Move focused window to workspace. 
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 5

# /End of Workspaces organization
###

###
# Startup commands.

# Set the keyboard layouts and layout switching (menu key).
exec setxkbmap -layout "us,ba,rs" -option "grp:menu_toggle"

# Set the wallpaper.
exec_always feh --bg-scale ~/.wallpaper.jpg

# /End of Startup commands.
###
